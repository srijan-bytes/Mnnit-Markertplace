<%- include("partials/headerB") -%>
<!-- boxes of other products -->
<style>
  p{
    font-size: medium;
    display: block;
  }
  .card{
     width: 20%;
     display: inline-block;
     box-shadow: 2px 2px 20px black;
     border-radius: 5px; 
     margin: 2%;
    }

.image img{
  width: 100%;
  border-top-right-radius: 5px;
  border-top-left-radius: 5px;
  

 
 }

.title{
 
  text-align: center;
  padding: 10px;
  
 }

h1{
  font-size: 20px;
 }

.des{
  padding: 3px;
  text-align: center;
 
  padding-top: 10px;
        border-bottom-right-radius: 5px;
  border-bottom-left-radius: 5px;
}
button{
  margin-top: 40px;
  margin-bottom: 10px;
  background-color: white;
  border: 1px solid black;
  border-radius: 5px;
  padding:10px;
}
button:hover{
  background-color: black;
  color: white;
  transition: .5s;
  cursor: pointer;
}
</style>
<section id="pricing" class="container-fluid">
  <div class="main">
      <%newItems.forEach(function(item){%>
    
      <div class="card ">
        <div class="title">
          <h1><%=item.pname%></h1>
        </div>
        <div class="image">
          <img src= <%=item.imageUrl%>>
        </div>
        <div class="des">
          <h2>Rs. <%=item.sellp%> </h2>
          <p>Seller Name: <%=item.name%></p>
          <button type="button" class="btn btn-outline-dark"><a href="/productdB/<%=user%>/<%=item._id%>" class="know" >Know More</a></button>
        </div>
      </div>
    
    <%});%>
  </div>

  </section>+
  <%- include("partials/footer") -%>>
