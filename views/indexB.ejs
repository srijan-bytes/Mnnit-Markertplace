<%- include("partials/headerB") -%>
<!-- Main Home Page of the User-->

<section id="title">
  <div class="row container-fluid">
    <div class="col-lg-7">
      <h1 class="heading" >Welcome <%=name%>, to MNNIT MARKETPLACE </h1>
      <button type="button" class="btn btn-light btn-lg button"><a href="/products/<%=user%>" style="color:#000"><i class="fas fa-sign-in-alt"></i> Buy ITEM</a></button>
      <button type="button" class="btn btn-outline-dark btn-lg button"><a href="/addproduct/<%=user%>" style="color:#fff"><i class="fas fa-sign-in-alt"></i> Sell ITEM</a></button>

    </div>
  </div>
</section>

<section id="features">

  <div class="row">
    <div class="feature-box col-lg-4">
      <i class="icon fas fa-book fa-4x"></i>
      <h3><strong>Buy & Sell Items</strong></h3>
      <p>Buy or Sell anything to your fellow MNNITians</p>

    </div>
    <div class="feature-box col-lg-4">
      <i class="icon fas fa-user-clock fa-4x"></i>
      <h3><strong>Save money & time.</strong></h3>
      <p>No need to spend more money or wait for your delivery.</p>

    </div>
    <div class="feature-box col-lg-4">
      <i class=" icon fas fa-info-circle fa-4x"></i>
      <h3><strong>Get Item info.</strong></h3>
      <p>Get to know which items you need</p>

    </div>
  </div>

</section>
<section id="about-us">
  <div id="carouselExampleIndicators" class="carousel slide " data-ride="carousel" data-pause="hover" data-interval="2000">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <h1>Made under guidance of:</h1>
      </div>
      <div class="carousel-item">
        <h1>Dr Manish Tiwari</h1>
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</section>
<%- include("partials/footer") -%>
